<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="modalModel"
            type="com.mychefassistant.presentation.main.modal.MainModalModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:fitsSystemWindows="true"
        tools:context=".presentation.main.MainActivity">

        <androidx.constraintlayout.motion.widget.MotionLayout
            android:id="@+id/activity_main_alert_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            app:layoutDescription="@xml/activity_main_alert_scene"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity_main_alert_content"
                android:layout_width="@dimen/alert_height"
                android:layout_height="0dp"
                android:background="@drawable/shape_circle_gradient"
                android:elevation="10dp"
                android:onClick="@{() -> null}"
                app:layout_constraintDimensionRatio="1, 1">

                <View
                    android:id="@+id/activity_main_alert_first_circle"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/shape_circle_gradient"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1, 1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.43"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.74"
                    app:layout_constraintWidth_percent="0.34" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/shape_circle_gradient"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1, 1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.84"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.80"
                    app:layout_constraintWidth_percent="0.18" />

                <TextView
                    android:id="@+id/activity_main_alert_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12pt"
                    android:layout_marginTop="36dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Test"
                    android:textColor="@color/background"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/activity_main_alert_first_circle"
                    app:layout_constraintTop_toTopOf="@id/activity_main_alert_first_circle" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="8dp"
                    android:text="A user interface element that displays text to the user!"
                    android:textColor="@color/background"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@id/activity_main_alert_content"
                    app:layout_constraintStart_toStartOf="@id/activity_main_alert_title"
                    app:layout_constraintTop_toBottomOf="@id/activity_main_alert_title" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.motion.widget.MotionLayout>

        <fragment
            android:id="@+id/nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:defaultNavHost="true"
            app:layout_constraintBottom_toTopOf="@id/activity_main_navigation"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navGraph="@navigation/nav_graph" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_main_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nav_host_fragment">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity_main_navigation_start"
                android:layout_width="@dimen/navigation_button_width"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/screen_padding_bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/activity_main_navigation_fab"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/activity_main_navigation_start_button"
                    android:layout_width="@dimen/navigation_button_height"
                    android:layout_height="0dp"
                    android:background="@drawable/shape_circle_ripple_primary"
                    android:backgroundTint="@color/background"
                    android:padding="@dimen/navigation_button_icon_button_padding"
                    android:src="@drawable/ic_round_menu_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1, 1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/iconColor" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity_main_navigation_fab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/activity_main_navigation_end"
                app:layout_constraintStart_toEndOf="@id/activity_main_navigation_start"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/activity_main_navigation_fab_button"
                    android:layout_width="@dimen/navigation_height"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/screen_padding_bottom"
                    android:background="@drawable/shape_navigation_fab"
                    android:elevation="@dimen/navigation_fab_padding"
                    android:padding="@dimen/navigation_fab_padding"
                    android:src="@drawable/ic_round_add_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1, 1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/secondaryTextColor" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity_main_navigation_end"
                android:layout_width="@dimen/navigation_button_width"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/screen_padding_bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/activity_main_navigation_fab"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/activity_main_navigation_end_button"
                    android:layout_width="@dimen/navigation_button_height"
                    android:layout_height="0dp"
                    android:background="@drawable/shape_circle_ripple_primary"
                    android:backgroundTint="@color/background"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/navigation_button_icon_button_padding"
                    android:src="@drawable/ic_outline_shopping_basket_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1, 1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/iconColor" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.motion.widget.MotionLayout
            android:id="@+id/activity_main_navigation_menu_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutDescription="@xml/activity_main_navigation_menu_scene">

            <View
                android:id="@+id/activity_main_navigation_menu_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/modalBackground" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity_main_navigation_menu_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_circle_gradient"
                android:elevation="10dp"
                android:onClick="@{() -> null}">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/activity_main_navigation_menu_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    app:layoutManager="LinearLayoutManager"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.68"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.6"
                    tools:listitem="@layout/navigation_menu_item" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/activity_main_navigation_menu_close"
                android:layout_width="@dimen/navigation_height"
                android:layout_height="0dp"
                android:background="@drawable/shape_circle"
                android:elevation="10dp"
                android:padding="@dimen/navigation_button_icon_button_padding"
                android:src="@drawable/ic_round_add_24"
                app:layout_constraintDimensionRatio="1, 1"
                app:tint="@color/background" />

        </androidx.constraintlayout.motion.widget.MotionLayout>

        <androidx.constraintlayout.motion.widget.MotionLayout
            android:id="@+id/activity_main_modal_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutDescription="@xml/activity_main_modal_scene"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <View
                android:id="@+id/activity_main_modal_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/modalBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity_main_modal_content"
                android:layout_width="550dp"
                android:layout_height="0dp"
                android:background="@drawable/shape_circle_gradient"
                android:elevation="10dp"
                android:onClick="@{() -> null}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1,1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent">

                <TextView
                    android:id="@+id/activity_main_modal_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@{modalModel.title, default=title}"
                    android:textColor="@color/background"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/activity_main_modal_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:lineSpacingExtra="8dp"
                    android:text="@{modalModel.message, default=title}"
                    android:textColor="@color/background"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/activity_main_modal_title"
                    app:layout_constraintWidth_percent="0.55" />

                <TextView
                    android:id="@+id/activity_main_modal_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:background="@drawable/shape_ripple_primary"
                    android:backgroundTint="@color/background"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:text="Cancel"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/activity_main_modal_accept"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.4" />

                <TextView
                    android:id="@+id/activity_main_modal_accept"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:background="@drawable/shape_ripple_primary"
                    android:backgroundTint="@color/background"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:text="Accept"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/activity_main_modal_cancel"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.4" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.motion.widget.MotionLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>