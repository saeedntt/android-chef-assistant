<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyChefAssistant" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyChefAssistant.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyChefAssistant.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyChefAssistant.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MyChefAssistant.PageHeader">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Theme.MyChefAssistant.GradientCircle">
        <item name="android:background">@drawable/shape_circle_gradient</item>
        <item name="layout_constraintDimensionRatio">1, 1</item>
    </style>

    <style name="Theme.MyChefAssistant.GradientCircleButton">
        <item name="android:background">@drawable/shape_circle_ripple_gradient</item>
        <item name="android:stateListAnimator">@animator/button_elevation</item>
        <item name="layout_constraintDimensionRatio">1, 1</item>
    </style>

    <style name="Theme.MyChefAssistant.PageSubmit">
        <item name="android:minHeight">60dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:background">@drawable/shape_ripple_gradient</item>
        <item name="android:elevation">10dp</item>
        <item name="android:layout_marginStart">@dimen/screen_padding_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/screen_padding_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/screen_padding_bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@animator/button_elevation</item>
    </style>

    <style name="Theme.MyChefAssistant.ModalButton">
        <item name="android:minHeight">36dp</item>
        <item name="android:background">@drawable/shape_ripple_primary</item>
        <item name="android:backgroundTint">@color/background</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:outlineProvider">bounds</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:stateListAnimator">@animator/button_elevation</item>
    </style>

    <style name="Theme.MyChefAssistant.Input" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/background</item>
        <item name="boxStrokeWidth">3dp</item>
        <item name="boxStrokeColor">@color/text_layout_border</item>
        <item name="android:elevation">10dp</item>
        <item name="hintTextColor">@color/secondaryColor</item>
    </style>
</resources>