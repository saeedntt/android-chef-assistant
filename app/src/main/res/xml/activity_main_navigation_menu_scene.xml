<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@+id/activity_main_navigation_menu_show"
        app:constraintSetStart="@id/activity_main_navigation_menu_hide"
        app:duration="500">
        <KeyFrameSet />
    </Transition>

    <ConstraintSet android:id="@+id/activity_main_navigation_menu_hide">
        <Constraint
            android:id="@+id/activity_main_navigation_menu_background"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/activity_main_navigation_menu_content"
            android:layout_width="@dimen/navigation_height"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="@dimen/screen_padding_bottom"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1, 1"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@+id/activity_main_navigation_menu_close"
            android:layout_width="@dimen/navigation_height"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="@dimen/screen_padding_bottom"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1,1"
            app:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/activity_main_navigation_menu_show">
        <Constraint
            android:id="@+id/activity_main_navigation_menu_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/activity_main_navigation_menu_content"
            android:layout_width="@dimen/navigation_menu_layout_width"
            android:layout_height="@dimen/navigation_menu_layout_width"
            android:translationX="@dimen/navigation_menu_layout_margin_start"
            android:translationY="@dimen/navigation_menu_layout_margin_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@+id/activity_main_navigation_menu_close"
            android:layout_width="@dimen/navigation_height"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="@dimen/screen_padding_bottom"
            android:rotation="-45"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1, 1"
            app:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>
</MotionScene>