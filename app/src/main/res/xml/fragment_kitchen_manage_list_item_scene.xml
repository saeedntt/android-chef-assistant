<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ConstraintSet android:id="@+id/fragment_kitchen_manage_list_initial_state">
        <Constraint
            android:id="@+id/fragment_kitchen_manage_list_menu_start"
            android:layout_width="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/fragment_kitchen_manage_list_item"
            android:layout_width="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1.0" />
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@color/primaryTextColor" />
        </Constraint>
        <Constraint
            android:id="@+id/fragment_kitchen_manage_list_menu_end"
            android:layout_width="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/fragment_kitchen_manage_list_show_start_menu">
        <Constraint
            android:id="@+id/fragment_kitchen_manage_list_menu_start"
            android:layout_width="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/fragment_kitchen_manage_list_item"
            android:layout_width="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="0.7" />
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="#eeeeee" />
        </Constraint>
        <Constraint
            android:id="@+id/fragment_kitchen_manage_list_menu_end"
            android:layout_width="0dp"
            android:visibility="gone"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/fragment_kitchen_manage_list_show_end_menu">
        <Constraint
            android:id="@+id/fragment_kitchen_manage_list_menu_start"
            android:layout_width="0dp"
            android:visibility="gone"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/fragment_kitchen_manage_list_item"
            android:layout_width="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="0.7" />
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="#eeeeee" />
        </Constraint>
        <Constraint
            android:id="@+id/fragment_kitchen_manage_list_menu_end"
            android:layout_width="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <Transition
        motion:constraintSetEnd="@+id/fragment_kitchen_manage_list_show_start_menu"
        motion:constraintSetStart="@+id/fragment_kitchen_manage_list_initial_state">
        <OnSwipe
            motion:dragDirection="dragEnd"
            tools:touchAnchorId="@+id/fragment_kitchen_manage_list_item"
            tools:touchAnchorSide="start" />
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/fragment_kitchen_manage_list_show_end_menu"
        motion:constraintSetStart="@+id/fragment_kitchen_manage_list_initial_state">
        <OnSwipe
            motion:dragDirection="dragStart"
            tools:touchAnchorId="@+id/fragment_kitchen_manage_list_item"
            tools:touchAnchorSide="end" />
    </Transition>
</MotionScene>
