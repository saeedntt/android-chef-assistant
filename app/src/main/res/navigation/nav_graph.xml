<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/kitchen_manage">

    <fragment
        android:id="@+id/kitchen_manage"
        android:name="com.mychefassistant.presentation.kitchen.manage.KitchenManageFragment"
        android:label="@string/kitchen"
        tools:layout="@layout/fragment_kitchen">
        <action
            android:id="@+id/action_kitchen_manage_to_kitchen_insert2"
            app:destination="@id/kitchen_insert" />
        <action
            android:id="@+id/action_kitchen_manage_to_grocery_manage2"
            app:destination="@id/grocery_manage" />
    </fragment>

    <fragment
        android:id="@+id/kitchen_insert"
        android:name="com.mychefassistant.presentation.kitchen.insert.KitchenInsertFragment"
        android:label="@string/kitchen_insert"
        tools:layout="@layout/fragment_kitchen_insert">
        <action
            android:id="@+id/action_kitchen_insert_to_grocery_manage2"
            app:destination="@id/grocery_manage"
            app:launchSingleTop="true"
            app:popUpTo="@id/kitchen_manage" />
    </fragment>

    <fragment
        android:id="@+id/grocery_manage"
        android:name="com.mychefassistant.presentation.grocery.manage.GroceryManageFragment"
        android:label="@string/grocery"
        tools:layout="@layout/fragment_grocery" />

</navigation>